{
  "name": "LIT Captions",
  "description": "Add LIT captions to videos",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "lit.html",
    "default_icon": "lit.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "shared.js",
        "scripts/deps/split-grid.js",
        "scripts/deps/popper.js",
        "scripts/deps/tippy.js",
        "scripts/content.js"
      ],
      "css": ["lit.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5080/*"
  ]
}
